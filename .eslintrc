{
  "root": true,
  "extends": ["airbnb", "prettier/react", "plugin:prettier/recommended"],
  "ignorePatterns": ["node_modules/", "static/", "public/"],
  "env": {
    "jest/globals": true
  },
  "overrides": [
    {
      "files": ["**/*.ts", "**/*.tsx"],
      "extends": [
        "airbnb",
        "airbnb/hooks",
        "plugin:@typescript-eslint/recommended",
        "plugin:@typescript-eslint/recommended-requiring-type-checking",
        "plugin:jest/all",
        "prettier",
        "prettier/react",
        "prettier/@typescript-eslint",
        "plugin:import/typescript"
      ],
      "parser": "@typescript-eslint/parser",
      "parserOptions": {
        "project": "./tsconfig.json"
      },
      "plugins": [
        "react",
        "jest",
        "jsx-a11y",
        "import",
        "prettier",
        "@typescript-eslint"
      ],
      "rules": {
        "import/extensions": [
          "error",
          "ignorePackages",
          {
            "js": "never",
            "jsx": "never",
            "ts": "never",
            "tsx": "never"
          }
        ],
        "jest/no-hooks": ["off"],
        "jest/lowercase-name": [
          "error",
          {
            "ignore": ["describe"]
          }
        ],
        "jsx-a11y/label-has-associated-control": [
          "error",
          {
            "controlComponents": ["DebouncedInput", "RangeInput"],
            "assert": "both",
            "depth": 25
          }
        ],
        "no-useless-constructor": "off",
        "react/jsx-filename-extension": [
          2,
          { "extensions": [".js", ".jsx", ".ts", ".tsx"] }
        ]
      },
      "settings": {
        "import/parsers": {
          "@typescript-eslint/parser": [".ts", ".tsx"]
        },
        "import/resolver": {
          "node": {
            "paths": ["./src"],
            "extensions": [".js", ".jsx", ".ts", ".tsx"]
          },
          "typescript": {
            "directory": ["./tsconfig.json"]
          }
        }
      }
    }
  ]
}
