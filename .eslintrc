{
  "root": true,
  "extends": ["airbnb", "prettier/react", "plugin:prettier/recommended"],
  "ignorePatterns": ["node_modules/", "static/", "public/"],
  "rules": {
    "jsx-a11y/label-has-associated-control": [
      "error",
      {
        "controlComponents": ["DebouncedInput", "RangeInput"],
        "assert": "both",
        "depth": 25
      }
    ]
  }
}
