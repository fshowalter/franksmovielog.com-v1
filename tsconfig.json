{
  "compilerOptions": {
    "module": "commonjs",
    "target": "esnext",
    "jsx": "preserve",
    "lib": ["dom", "es2019"],
    "strict": true,
    "noEmit": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "strictNullChecks": true,
    "noImplicitAny": true
  },
  "include": ["./src/**/*", "./*.js"],
  "exclude": ["**/*.svg", "**/*.png", "**/*.jpg", "./static/**.*"],
  "typeRoots": ["./src/types", "./node_modules/@types/"]
}
