{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "prHourlyLimit": 0,
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": ["at any time"]
  },
  "packageRules": [
    {
      "matchPackageNames": [
        "remark",
        "mdast-util-to-hast",
        "hast-util-to-html",
        "unist-util-visit"
      ],
      "groupName": "esm dependent"
    },
    {
      "matchPackageNames": ["@typescript-eslint/*"],
      "groupName": "@typescript/eslint"
    }
  ]
}
